<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Validate Sitemap - SEO Suite</title>
        <css src="Defox_SEOSuite::css/sitemap-admin.css"/>
        <css src="Defox_SEOSuite::css/sitemap-validate.css"/>

    </head>
    <body>
        <referenceContainer name="content">
            <block class="Defox\SEOSuite\Block\Adminhtml\Sitemap\Validate" 
                   name="sitemap.validate" 
                   template="Defox_SEOSuite::sitemap/validate.phtml">
                <arguments>
                    <argument name="title" xsi:type="string">Validate Sitemap</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
