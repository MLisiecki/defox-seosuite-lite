                        <resource id="Defox_SEOSuite::sitemap_validate" title="Walidacja" translate="title" sortOrder="20" />
                        <resource id="Defox_SEOSuite::sitemap_dashboard" title="Analityka" translate="title" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Defox_SEOSuite::config" title="SEO Suite Lite Section" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
