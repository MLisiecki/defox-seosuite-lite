<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::marketing">
                    <resource id="Defox_SEOSuite::seosuite" title="SEO Suite Lite" translate="title" sortOrder="50">
                        <resource id="Defox_SEOSuite::template" title="Meta Tag Templates" translate="title" sortOrder="20" />


                        <resource id="Defox_SEOSuite::structured_data_preview" title="Structured Data Preview" translate="title" sortOrder="55" />
                        <resource id="Defox_SEOSuite::settings" title="Settings" translate="title" sortOrder="60" />
